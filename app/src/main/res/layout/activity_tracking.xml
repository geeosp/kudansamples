<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tracking"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.voxar.arauthtool.TrackingActivity"
    android:padding="10dp">

    <eu.kudan.kudan.ARView
        android:id="@+id/arview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        />


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:gravity="right"
    android:id="@+id/tracking_symbol"
    android:visibility="visible">
    <ProgressBar
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        style="@android:style/Widget.Material.Light.ProgressBar.Large">

    </ProgressBar>
</RelativeLayout>
    <RelativeLayout
        android:id="@+id/listviewroot"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"

        android:visibility="invisible"
        android:gravity="bottom">

        <ListView
            android:id="@+id/lesson_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foregroundGravity="bottom" />
    </RelativeLayout>
</RelativeLayout>
